<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-utensils"></i>
        我的餐廳清單
      </a>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<form action="/restaurants/{{restaurant.id}}/edit" method="POST">
  {{!-- <h1 class="mb-1 restaurant-show-title">test</h1> --}}
  <input type="text" placeholder="餐廳名稱" name="name" class="mb-1 restaurant-show-title" value="{{restaurant.name}}">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input class="edit-category" type="text" placeholder="category" name="category"
            value="{{restaurant.category}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input class="edit-location" type="text" placeholder="location" name="location"
            value="{{restaurant.location}}">
          {{!-- <a href={{restaurant.google_map}} class="text-secondary" target="_blank">
          </a> --}}
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          <input class="edit-google_map" type="text" placeholder="google_map" name="google_map"
            value="{{restaurant.google_map}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" placeholder="phone" name="phone" value="{{restaurant.phone}}">
        </p>

        <textarea type="text" placeholder="description" name="description">{{restaurant.description}}</textarea>


        {{!-- <img class="rounded mx-auto d-block mb-4 w-100" src={{restaurant.image}} alt={{restaurant.name}}
          style="max-width: 600px;"> --}}
        圖片連結網址:
        <input class="edit-image" type="text" placeholder="image" name="image" value="{{restaurant.image}}">
        <br>
        <button class="edit-button" type="submit">完成</button>
      </div>
    </div>
  </div>
</form>