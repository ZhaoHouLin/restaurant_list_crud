<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-utensils"></i>
        我的餐廳清單
      </a>
    </div>
  </nav>
  <div class="banner"></div>
</header>
<form action="/restaurants" method="POST">
  {{!-- <h1 class="mb-1 restaurant-show-title">test</h1> --}}
  <input type="text" placeholder="輸入餐廳名稱" name="name" class="mb-1 restaurant-show-title" required>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2 "></i>
            類別：
          </span>
          <input type="text" placeholder="category" name="category">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" placeholder="location" name="location">

          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          <input type="text" placeholder="google_map" name="google_map">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" placeholder="phone" name="phone" required pattern="[0-9]{10}">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-star fa-xs pr-2"></i>
            評分：
          </span>
          <input type="text" placeholder="rating" name="phone" value="{{restaurant.rating}}">
        </p>
        <textarea type="text" placeholder="description" name="description">

          </textarea>

        圖片連結網址:
        <input type="text" placeholder="image" name="image">
        <br>
        <button class="new-button" type="submit">Create</button>
      </div>
    </div>
  </div>
</form>